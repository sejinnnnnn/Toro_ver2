<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
                android:text="Toro 식당"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/colorPrimaryDark" android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"

                />
        <ImageButton
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_border_color_black_24dp"
        android:id="@+id/change"
        android:background="@android:color/transparent"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
    >
        <ImageButton
                android:layout_width="53dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp"
                android:id="@+id/k1"
                android:background="@android:color/transparent"

        />
        <TextView
                android:text="주방"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@android:color/background_dark" android:id="@+id/department"/>
        <ImageButton
                android:layout_width="53dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                android:id="@+id/k2"
                android:background="@android:color/transparent"/>
        <ImageButton
                android:layout_width="53dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_replay_black_24dp"
                android:id="@+id/imageView"
                android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout  android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:orientation="vertical"
                   android:id="@+id/table"></LinearLayout>
</LinearLayout>